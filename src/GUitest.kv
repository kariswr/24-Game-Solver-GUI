<start>:
	id: start
	name : start
	Screen :
		canvas.before:
	        Rectangle:
	            pos: self.pos
	            size: self.size
	            source: 'woven-cloth-352481_1920.jpg'
	    BoxLayout:
			orientation :'horizontal'
			size_hint: 0.8, 0.8
			pos_hint: {'center_x': 0.5125, 'center_y': 0.75}
			Image:
				id : Card3
				source : 'titlesimple.png'

		Button :
			background_normal: ''
			background_down: 'woven-cloth-352481_1920.jpg'
			background_color: .88,.88,.88,1
			text: 'START'
			size_hint: 0.4, 0.1
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			color: 0,0,0,1
			on_press :
				root.manager.current = 'play'
		Button :
			background_normal: ''
			background_down: 'woven-cloth-352481_1920.jpg'
			background_color: .88,.88,.88,1
			text: 'EXIT'
			size_hint: 0.4, 0.1
			pos_hint: {'center_x': 0.5, 'center_y': 0.3}
			color: 0,0,0,1
			on_press :
				root.exit()

<play>
	Screen:
		canvas.before:
	        Rectangle:
	            pos: self.pos
	            size: self.size
	            source: 'woven-cloth-352481_1920.jpg'
	    Button:
			background_normal: ''
			background_down: 'woven-cloth-352481_1920.jpg'
			background_color: .88,.88,.88,1
			color: 0,0,0,1
	    	text: "Draw"
	    	pos_hint: {'center_x':0.3, 'center_y': 0.4}
	    	size_hint: 0.175, 0.075
	    	on_press:
	    		root.draw()

